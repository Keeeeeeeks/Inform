%
% An example environment and counters
%
\newcounter{example}[section]

\newenvironment{example}
    {\medskip\hspace{1cm}\refstepcounter{example}\begin{minipage}{13.5cm}}
    {\end{minipage}{\itshape(\theexample )}\medskip}

\renewcommand{\theexample}{\thesection .\arabic{example}}

